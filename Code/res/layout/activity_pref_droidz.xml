<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" >

    <PreferenceCategory android:title="Droids Speed">
        <!--
        <Preference android:id="@+id/txtViewSpeedFactor"/>
        -->

	    <Preference android:key="increaseSpeed" 
	                android:title="Increase"
	                android:summary="Increase speed of Droids" />
	    
	    <Preference android:key="decreaseSpeed" 
	                android:title="Decrease"
	                android:summary="Decrease speed of Droids" />
    
    </PreferenceCategory>
    
    <PreferenceCategory android:title="Number of Droids">
    
	    <Preference android:key="increaseDroids" 
		         	android:title="Increase"
		         	android:summary="Increase number of Droids in screen" />
	    
	    <Preference android:key="decreaseDroids" 
		         	android:title="Decrease"
		         	android:summary="Decrease number of Droids in screen" />
	    
    </PreferenceCategory>
    
	<PreferenceCategory android:title="Welcome Message">
	    <EditTextPreference
	           	android:key="welcome_message"
	            android:title="Welcome Message" 
	            android:summary="Define the Welcome message to be shown"
	            android:dialogTitle="Welcome Message"
	            android:dialogMessage="Provide a message"    
	            android:defaultValue="Default welcome message" />

	</PreferenceCategory>

<PreferenceCategory android:title="FPS Setting">

    <ListPreference android:key="fps_intervals"
                    android:title="FPS"
                    android:dialogTitle="Frames Per Second" 
                    android:defaultValue="30"
                    android:entries="@array/fpsIntervals"
                    android:entryValues="@array/fpsIntervalValues"/>

</PreferenceCategory>
    
</PreferenceScreen>